//program to print the sum of digits in +ve integer number


#include <stdio.h>

int main() {
   int b,l,r,sum=0;
   printf("enter any number: ");
   scanf("%d",&r);
   b=r;
   printf("\n\n");
   printf(" the sum of the digits in the entered number is : ");
   
   while(b>=1){
       l=b%10;
       b=b/10;
       
       sum=sum+l;
   }
   printf("%d",sum);
   
   
   
   return 0;
}
