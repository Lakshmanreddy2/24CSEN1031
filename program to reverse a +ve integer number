// program to reverse a +ve integer number

#include <stdio.h>

int main() {
   int l,r,sum=0;
   printf("enter any number to be reversed: ");
   scanf("%d",&l);
   
   
   while(l>=1){
       r=l%10;
       l=l/10;
       sum=sum*10+r;
   }
   
   l=sum;
   printf("\n\nafter reversing: %d",l);

   
   return 0;
}
